<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>The Blog | Newsletter</title>
    <link rel="stylesheet" href="/stylesheets/header.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/newsletter.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Sen:wght@400..800&display=swap"
          rel="stylesheet">
    <link rel="shortcut icon" href="./images/blog-icon.svg" type="image/x-icon">
</head>
<body>

<%- include('partials/header', {email: email}); %>

<div class="container newsletter-wrapper">
    <p class="subtitle">Newletters</p>
    <h3 class="title">Stories and interviews</h3>
    <p class="description">Subscribe to learn about new product features, the latest in technology, solutions, and
        updates.</p>
    <div class="newsletter-form-wrapper">
        <form class="newsletter-form" action="/newsletter" method="post">
            <input name=email class="email-input" placeholder="Enter your email" type="email">
            <button class="subscribe-btn">Subscribe</button>
        </form>
        <div class="privacy-policy-wrapper">
            <span class="privacy-policy">
            We care about your data in our <span class="underline">privacy policy</span>
        </span>
        </div>
    </div>
</div>
<section class="all-blog-posts container">
    <h3 class="all-blog-posts-title">All blog posts</h3>
    <div class="all-blogs-grid">
        <% blogs.splice(0, 3).forEach((blog, index)=>{ %>
            <div class="all-blogs-card">
                <a href="/blogs/<%= blog.id %>">
                    <figure>
                        <img class="all-blogs-img" src="/images/thumbnails/normal/<%= index %>.png" alt="thumbnail">
                    </figure>
                </a>
                <div>
                    <p class="author-date-label"><%= blog.formatedDate %></p>
                </div>
                <a href="/blogs/<%= blog.id %>">
                    <h3 class="all-blogs-card-title"><%= blog.title.slice(0, 20) %> </h3>
                </a>
                <p class="all-blogs-card-text"><%= blog.description.slice(0, 90) %> </p>
            </div>
        <% }) %>
    </div>

</section>


<%- include('partials/footer'); %>

</body>
</html>
